@import 'vendor/bootstrap.min.css'
@import 'base_view'

body
  background-color: whitesmoke
  padding-top: 50px

  &.loading
    .loading-indicator
      display: block

.loading-indicator
  display: none
  float: right
  color: white
  line-height: 40px

.projects_index_view ul
.users_index_view ul
  display: flex
  flex-wrap: wrap
  width: 100%

.projects_index_view ul > li
.users_index_view ul > li
  flex-basis: 33%
  list-style: none
  margin-top: 20px
