<div class="cover-art">
  <div class="background"><img src="/assets/images/projects/{{owner}}/{{id}}-l.png" width=200 height=200></img></div>
  <div class="foreground"><img src="/assets/images/pages/play-overlay.png" width=200 height=200></img></div>
  <div class="foreground none"><img src="/assets/images/pages/pause-overlay.png" width=200 height=200></img></div>
</div>
<div class="project-descriptions">
  <h3>{{name}}</h3>
  <div>by <a href="/users/{{owner}}">{{owner}}</a></div>
  {{#if origin.user}}
  <div>forked from <a href="/projects/{{origin.user}}/{{origin.proj}}">{{origin.user}}</a></div>
  {{/if}}
   <div><label>Description: <p>{{description}}</p></label></div>
   <div><label>Star: <p>{{starred.length}}</p></label></div>
</div>
<div class="tracks">
    <h3>Tracks</h3>
    {{view "project_tracks_view" tracks=tracks self=self}}
    <div class="fork-button">
    {{#if loggedIn}}
      {{#if self}}
        <button>Add new track!</button>
      {{else}}
        {{#if youForked}}
          <button disabled>You already forked this project</button>
        {{else}}
          <button>Fork this project!</button>
        {{/if}}
      {{/if}}
    {{/if}}
    </div>
</div>
